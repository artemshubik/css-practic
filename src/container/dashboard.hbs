<!DOCTYPE html>
<html>

<head>
  <title>
    Dashboard Page
  </title>
  <meta charset='utf-8' />

  <link rel="apple-touch-icon" sizes="180x180" href="/fav/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/fav/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/fav/favicon-16x16.png">
  <link rel="manifest" href="/fav/site.webmanifest">
  <link rel="mask-icon" href="/fav/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="theme-color" content="#ffffff">
  <meta name="viewport"
    content="viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">


  <link href='css/normalize.css' rel='stylesheet' />

  <link href='css/dashboard.css' rel='stylesheet' />

</head>

<body>
  <div class="page page--dashboard">

    {{!-- a-side section --}}

    <aside class="page__aside aside vertical">
      <div class="text aside__logo">Sidebar</div>
      <nav class="vertical vertical--small">
        <a href="#" class="nav-button nav-button--active click">
          <span class="icon nav-button__icon" style="background-image: url('/svg/nav/home.svg');"></span>
          <span class="text text--light">Home</span>
        </a>
        <a href="#" class="nav-button click">
          <span class="icon nav-button__icon" style="background-image: url('/svg/nav/orders.svg');"></span>
          <span class="text text--light">Orders</span>
        </a>
        <a href="#" class="nav-button click">
          <span class="icon nav-button__icon" style="background-image: url('/svg/nav/products.svg');"></span>
          <span class="text text--light">Products</span>
        </a>
      </nav>
    </aside>

    {{!-- header section --}}

    <header class="header">
      <div class="layout header__content text--small">
        <div class="header__search">
          <input type="text" placeholder="Search" class="text field field--header">
          <span class="icon header__icon-search" style="background-image: url('/svg/header/search.svg');"></span>
          <span class="icon icon--header-settings icon--button icon--color-blue click"
            style="background-image: url('/svg/header/settings.svg');"></span>
        </div>
        <div class="header__icons">
          <span class="icon icon--button header__icon-addition icon--color-yellow click"
            style="background-image: url('/svg/header/signal.svg');"></span>
          <span class="icon icon--button header__icon-addition icon--color-light-blue click"
            style="background-image: url('/svg/header/translate.svg');"></span>
          <span class="icon icon--button header__icon-addition icon--color-yellow click"
            style="background-image: url('/svg/header/bell.svg');"></span>
        </div>
      </div>
    </header>
    <main class="main">
      <div class="layout layout__gap">
        <section class="box analytic__block">
          <div class="analytic analytic--double analytic--purple">
            <span class="icon analytic__button icon--button icon--color-purple"
              style="background-image: url('/svg/analytic/money.svg');"></span>
            <div class="relative vertical vertical--small">
              <div class="analytic__title text text--light">$500.00</div>
              <div class="analytic__info text text--lighter">Total earning</div>
              <span class="icon analytic__arrow"
                style="background-image: url('/svg/analytic/purple_arrow.svg');"></span>
            </div>
          </div>
          <div class="analytic analytic--double analytic--blue">
            <span class="icon analytic__button icon--button icon--color-blue"
              style="background-image: url('/svg/analytic/cart.svg');"></span>
            <div class="relative vertical vertical--small">
              <div class="analytic__title text text--light">$961</div>
              <div class="analytic__info text text--lighter">Total Order</div>
            </div>
          </div>
          <div class="analytic analytic--blue analytic--single">
            <span class="icon analytic__button icon--button icon--color-blue"
              style="background-image: url('/svg/analytic/money.svg');"></span>
            <div class="relative vertical vertical--small">
              <div class="analytic__title text text--light analytic--title-small">$203k</div>
              <div class="analytic__info text text--lighter">Total Income</div>
            </div>
          </div>
          <div class="analytic analytic--white analytic--single">
            <span class="icon analytic__button icon--button icon--color-yellow"
              style="background-image: url('/svg/analytic/shop_yellow.svg');"></span>
            <div class="relative vertical vertical--small">
              <div class="analytic__title text analytic--title-small">$203k</div>
              <div class="analytic__info text text--grey">Total Income</div>
            </div>
          </div>
        </section>
        <section class="bottom__wrapper">
          <div class="box box__wrapper">
            <div class="box-title text text--bold">Purchase list</div>
            <hr class="divider">
            <div class="table-row">
              <div class="table-item">
                <div class="text text--line">ID437661</div>
                <div class="text text--line">May 11, 2023, 14:21</div>
              </div>
              <div class="table-item">
                <div class="text text--line">AirOn ProCam</div>
                <div class="text text--line">7/8 USB Type-C</div>
              </div>
              <div class="table-item">
                <div class="text text--line">132.32 EUR</div>
                <div class="text text--line text--warning">Not paid</div>
              </div>
              <div class="table-item">
                <div class="text text--line">Customer</div>
                <div class="text text--line">robin@com.de</div>
              </div>
            </div>
            <hr class="divider">
            <div class="table-row">
              <div class="table-item">
                <div class="text text--line">ID437661</div>
                <div class="text text--line">May 11, 2023, 14:21</div>
              </div>
              <div class="table-item">
                <div class="text text--line">PHILIPS Essential</div>
                <div class="text text--line">HD9200/90</div>
              </div>
              <div class="table-item">
                <div class="text text--line">543 USD</div>
                <div class="text text--line text--success">Pay by Stripe</div>
              </div>
              <div class="table-item">
                <div class="text text--line">Customer</div>
                <div class="text text--lineg">dima@com.ua</div>
              </div>
            </div>
          </div>
          <div class="box box__wrapper">
            <div class="box-title text text--bold">Payment</div>
            <hr class="divider">
            <div class="radio-wrapper">
              <label for="radio-1" class="radio-item text">
                <input type="radio" checked="checked" id="radio-1" name="radio">
                Credit card
              </label>
              <label for="radio-2" class="radio-item text">
                <input type="radio" id="radio-2" name="radio">
                Debit card
              </label>
              <label for="radio-3" class="radio-item text">
                <input type="radio" id="radio-3" name="radio">
                PayPal
              </label>
            </div>
            <form class="form__wrapper">
              <div class="form__item">
                <label for="" class="text">Name on card</label>
                <input type="text" placeholder="" class="text field ">
              </div>
              <div class="form__item">
                <label for="" class="text">Credit card number</label>
                <input type="text" placeholder="" class="text field ">
              </div>
              <div class="form__item">
                <label for="" class="text">Expiration</label>
                <input type="text" placeholder="" class="text field ">
              </div>
              <div class="form__item">
                <label for="" class="text">CVV</label>
                <input type="text" placeholder="" class="text field ">
              </div>
              <hr class="divider form__divider">
              <div class="form__item">
                <label class="text" for="">Country</label>
                <div class="relative">
                  <div class="field field--select">
                    <span class="text text--grey">Choose...</span>
                    <span class="icon form__icon-select" style="background-image: url('/svg/select.svg');"></span>
                    <select class="field__select" name="" id="">
                      <option value="dog">Dog</option>
                      <option value="cat">Cat</option>
                      <option value="turtle">Turtle</option>
                      <option value="humster">Humster</option>
                      <option value="lion">Lion</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="form__item">
                <label class="text" for="">State</label>
                <div class="relative">
                  <div class="field field--select">
                    <span class="text text--grey">Choose...</span>
                    <span class="icon form__icon-select" style="background-image: url('/svg/select.svg');"></span>
                    <select class="field__select" name="" id="">
                      <option value="dog">Dog</option>
                      <option value="cat">Cat</option>
                      <option value="turtle">Turtle</option>
                      <option value="humster">Humster</option>
                      <option value="lion">Lion</option>
                    </select>
                  </div>
                </div>
              </div>
              <hr class="divider form__divider">
              <button class="text btn btn__form" type="button">Continue to checkout</button>
            </form>

          </div>
      </div>
      </section>

  </div>

  </main>
  </div>
</body>

</html>