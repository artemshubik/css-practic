<div class="page">
  <div class="page_content">
    <header class="page_block">
      <div class="header row">
        <div class="col-3">
          {{> logo}}
        </div>
        <nav class="header_nav col-9">
          <div class="header_nav_right">
            {{> nav list=header}}
          </div>
        </nav>
      </div>
    </header>
    {{!-- hero section --}}
    <section class="page_block">
      <div class="hero">
        {{> hero data=hero}}
        <a class="button" href="{{hero.button.url}}">{{hero.button.text}}</a>
      </div>
    </section>
    {{!-- preview section --}}
    <section class="page_block">
      <div class="row g-4">
        {{#each preview}}
        <div class="col-6">
          {{> cardPreview data=this}}
        </div>
        {{/each}}
      </div>
    </section>
    {{!-- list of posts section --}}
    <main class="page_block">
      <div class="main">
        <div class="row g-0">
          <div class="col-12">
            <div class="list_header">
              <div class="row g-0">
                <div class="col-6">
                  <h2 class="list_title">List of posts</h2>
                </div>
                <div class="col-6">
                  <div class="category_list">
                    {{#each categories}}
                    <button class="category_button">{{text}}</button>
                    {{/each}}
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-7">
            <div class="list">
              {{#each news}}
              {{> cardPost data=this}}
              {{/each}}
            </div>
          </div>
          {{!-- A-side --}}
          <div class="col-5">
            <div class="list_aside">
              <div class="about">
                <h4 class="about_title">About</h4>
                <p class="about_text">{{about}}</p>
              </div>
              {{> linkList data=archive title="Archives"}}
              {{> linkList data=social title="Social"}}
            </div>
          </div>
        </div>
      </div>
    </main>
    {{!-- footer --}}
    <footer class="page_block">
      <div class="row g-0 footer">
        <div class="col-3">
          {{> logo}}
          <span class="footer_copyright">Copyright 2023-2024</span>
        </div>
        {{#each footer}}
        <div class="col-3">
          <div class="footer_title">{{title}}</div>
          {{> nav list=links isVertical=true}}
        </div>
        {{/each}}
      </div>
    </footer>
  </div>
</div>