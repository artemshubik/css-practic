{{!-- header --}}
<header class="page_block">
  <div class="header row">
    <div class="col-3">
      {{> logo}}
    </div>
    <nav class="header_nav col-9">
      <div class="header_nav_right">
        {{> nav list=header}}
      </div>
    </nav>
  </div>
</header>
{{!-- end of header --}}

{{!-- hero --}}

{{#with hero}}
<section class="hero">
  <div class="hero_content">
    <h1 class="hero_title">{{title}}</h1>
    <p class="hero_text">{{text}}</p>
  </div>
  <img src="{{photo}}" alt="Hero image" class="hero_image">
</section>
{{/with}}

{{!-- blog --}}

<main class="blog">
  {{#each blog}}
  {{> cardBlog data=this}}
  {{/each}}
</main>

{{!-- form --}}
{{#with form}}
<section class="form">
  <div class="form_content">
    <h3 class="form_title">{{title}}</h3>
    <p class="form_info">{{info}}</p>
  </div>
  <div class="form_action">
    <a href="{{href}}" class="button form_button">{{button}}</a>
  </div>
</section>
{{/with}}


{{!-- footer --}}
<footer class="page_block">
  <div class="row g-0 footer">
    <div class="col-3">
      {{> logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div class="col-3">
      <div class="footer_title">{{title}}</div>
      {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
  </div>
</footer>