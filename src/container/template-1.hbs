<div class="page">
  <div class="page_content">
    <div class="page_block">
      <header class="header row">
        <div class="col-3">
          {{> logo}}
        </div>
        <nav class="header_nav col-9">
          <div class="header_nav_right">
            {{> nav list=header}}
          </div>
        </nav>
      </header>

    </div>
    {{!-- hero section --}}
    <div class="page_block">
      {{> hero data=hero}}
    </div>
    {{!-- plans section --}}
    <div class="page_block">
      <main class="row g-0 plans">
        {{#each plans}}
        <div class="col plans_card">
          {{> card data=this}}
        </div>
        {{/each}}
      </main>
    </div>
    {{!-- footer --}}
    <div class="page_block">

      <footer class="row g-0 footer">
        <div class="col-3">
          {{> logo}}
          <span class="footer_copyright">Copyright 2023-2024</span>
        </div>
        {{#each footer}}
        <div class="col-3">
          <div class="footer_title">{{title}}</div>
          {{> nav list=links isVertical=true}}
        </div>
        {{/each}}
      </footer>
    </div>
  </div>
</div>